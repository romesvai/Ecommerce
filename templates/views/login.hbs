<!DOCTYPE html>
<html>
    {{>head}}
    <body>
        {{>header}}
        <div class="main-content p-5 container d-flex justify-content-center align-items-center my-6">
            <form class="bg-light p-5" id="login-form">
                <h2>Log In</h2>
                
                <div class="my-3">
                    <input class="form-control form-control-lg" type="text"  id="email" placeholder="Email">
                    <label for="email" hidden>Email:</label>
                </div>
                <div class="my-3">
                    <input class="form-control form-control-lg" type="password"  id="password" placeholder="Password">
                    <label for="password" hidden>Password:</label>
                </div>
                <button type="button" class="btn btn-primary my-3">Submit</button>
                <p>
                    Don't have an account?
                    <span>
                        <a href="/register">Sign Up Now</a>
                    </span>
                </p>
                <h2 id="success-login"></h2>
            </form>
        </div>
        {{>script}}
        <script src="/js/login.js"></script>
    </body>
</html>